<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mike4christ.cryptocompare.Create_Card">
    <TextView
        android:id="@+id/text_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Card"
        android:textColor="#000000"
        android:elevation="1dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="124dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />
    <TextView
        android:id="@+id/text_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC : ETH"
        android:textColor="#000000"
        android:elevation="1dp"
        android:fontFamily="monospace"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="serif"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/text_create"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/text_create"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_create"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="42dp"
        android:layout_marginLeft="42dp"

        android:layout_marginRight="42dp"
        android:layout_marginStart="42dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_symbol"
        app:layout_constraintVertical_bias="0.081">
        <Spinner
            android:id="@+id/spinner_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Select Card"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Please Try to Connect to Internet If Not !"
        android:textColor="@color/colorPrimary"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.894" />




</android.support.constraint.ConstraintLayout>
